# codealpha
import random

# List of words to choose from
words_list = ['python', 'hangman', 'challenge', 'developer', 'codealpha', 'keyboard', 'programming']

# Choose a random word
word = random.choice(words_list)
guessed_letters = []
tries = 6  # Number of allowed incorrect guesses

print("ğŸ® Welcome to Hangman!")
print("_ " * len(word))

# Main game loop
while tries > 0:
    guess = input("Guess a letter: ").lower()

    if len(guess) != 1 or not guess.isalpha():
        print("âŒ Please enter a single alphabet letter.")
        continue

    if guess in guessed_letters:
        print("âš ï¸ You've already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in word:
        print("âœ… Good guess!")
    else:
        tries -= 1
        print(f"âŒ Wrong guess! Tries left: {tries}")

    # Show current word status
    display_word = ""
    for letter in word:
        if letter in guessed_letters:
            display_word += letter + " "
        else:
            display_word += "_ "
    print(display_word.strip())

    # Check if word is completely guessed
    if all(letter in guessed_letters for letter in word):
        print("ğŸ‰ Congratulations! You guessed the word:", word)
        break
else:
    print("ğŸ’€ Game Over! The word was:", word)
